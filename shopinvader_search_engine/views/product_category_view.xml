<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<record id="view_shopinvader_category_tree" model="ir.ui.view">
    <field name="model">shopinvader.category</field>
    <field name="inherit_id" ref="shopinvader.view_shopinvader_category_tree"/>
    <field name="arch" type="xml">
        <field name="backend_id" position="after">
            <field name="index_id"/>
            <field name="sync_state"/>
            <field name="date_modified"/>
            <field name="date_syncronized"/>
        </field>
    </field>
</record>

<record id="view_shopinvader_category_search" model="ir.ui.view">
    <field name="model">shopinvader.category</field>
    <field name="inherit_id" ref="shopinvader.view_shopinvader_category_search"/>
    <field name="arch" type="xml">
        <field name="backend_id" position="after">
            <field name="index_id"/>
            <field name="sync_state"/>
            <separator/>
            <filter string="To Update" name="to_update"
                    domain="[('sync_state','=','to_update')]"/>
            <filter string="Scheduled" name="scheduled"
                    domain="[('sync_state','=','scheduled')]"/>
            <filter string="Done" name="done"
                    domain="[('sync_state','=','done')]"/>
        </field>
        <filter name="group_by_backend_id" position="after">
            <filter name="group_by_index_id" string="Index" domain="[]" context="{'group_by':'index_id'}"/>
            <filter name="group_by_sync_state" string="State" domain="[]" context="{'group_by':'sync_state'}"/>
        </filter>
    </field>
</record>

<record model="ir.actions.server" id="action_recompute_shopinvader_category">
    <field name="name">Recompute shopinvader category</field>
    <field name="model_id" ref="product.model_product_category"/>
    <field name="code">
        for categ in object:
    categ.shopinvader_bind_ids._jobify_recompute_json(force_export=True)
    </field>
</record>

<record id="ir_recompute_shopinvader_category" model="ir.values">
    <field eval="'client_action_multi'" name="key2"/>
    <field eval="'product.category'" name="model"/>
    <field name="name">Recompute shopinvader category</field>
    <field eval="'ir.actions.server,%d'%action_recompute_shopinvader_category" name="value"/>
</record>

</odoo>
