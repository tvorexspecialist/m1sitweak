<odoo>
    <record model="ir.ui.view" id="locomotive_backend_view_form">
        <field name="name">Locomotive.backend form (in shopinvader_sale_profile)</field>
        <field name="model">locomotive.backend</field>
        <field name="inherit_id" ref="connector_locomotivecms.view_locomotive_backend_form"/>
        <field name="priority" eval="90"/>
        <field name="arch" type="xml">
            <group name="allowed_country" position="before">
                <group name="price" colspan="4">
                    <field name="sale_profile_ids" string="Sale profiles" colspan="4" nolabel="True">
                        <tree editable="bottom">
                            <field name="fiscal_position_ids" widget="many2many_tags"/>
                            <field name="pricelist_id"/>
                            <field name="code"/>
                            <field name="default"/>
                        </tree>
                    </field>
                </group>
            </group>
            <field name="pricelist_id" position="replace">
                <field name="use_sale_profile"/>
                <field name="pricelist_id" attrs="{'invisible': [('use_sale_profile', '=', True)]}"/>
            </field>
        </field>
    </record>
</odoo>